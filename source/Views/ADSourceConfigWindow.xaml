<Window x:Class="AD_User_Reset_Print.Views.ADSourceConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AD_User_Reset_Print.Views"
        mc:Ignorable="d"
        Title="Sources" Height="370" Width="360"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    <Grid>
        <Label Content="Domaine*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="TxtbDomain" HorizontalAlignment="Left" Margin="167,14,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="178" AutomationProperties.IsRequiredForForm="True" TextChanged="TxtbDomain_TextChanged"/>
        <Label Content="Identifiant*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,41,0,0" />
        <TextBox x:Name="TxtbUsername" HorizontalAlignment="Left" Margin="167,45,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="178" AutomationProperties.IsRequiredForForm="True" TextChanged="TxtbUsername_TextChanged"/>
        <Label Content="Mot de passe*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,72,0,0"/>
        <PasswordBox x:Name="PswbPassword" HorizontalAlignment="Left" Margin="167,76,0,0" VerticalAlignment="Top" Width="178" AutomationProperties.IsRequiredForForm="True" PasswordChanged="PswbPassword_PasswordChanged"/>
        <Label Content="Groupe où se trouve les utilisateurs" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,103,0,0" />
        <TextBox x:Name="txtbGroup" HorizontalAlignment="Left" Margin="10,134,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="201" AutomationProperties.IsRequiredForForm="True" TextChanged="txtbGroup_TextChanged" />
        <Button x:Name="btnAddGroup" Content="Ajouter" VerticalAlignment="Bottom" Margin="0,0,84,202" Width="60" Click="btnAddGroup_Click" HorizontalAlignment="Right"/>
        <Button x:Name="btnRemoveGroup" Content="Enlever" VerticalAlignment="Bottom" Margin="0,0,15,202" Width="62" Click="btnRemoveGroup_Click" HorizontalAlignment="Right"/>
        <ListBox x:Name="LbGroups" d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,157,0,0" Width="335" Height="118" SelectionChanged="lbGroups_SelectionChanged"/>
        <Button x:Name="BtnTestConnection" Content="Test Connection" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,53" Height="20" Width="165" Click="BtnTestConnection_Click"/>
        <Button x:Name="BtnConnection" Content="Connecter" VerticalAlignment="Bottom" Margin="180,0,15,53" Height="20" Click="BtnConnection_Click"/>
        <TextBox x:Name="txtOutput" HorizontalAlignment="Right" Margin="0,0,15,10" TextWrapping="Wrap" Text="txtOutput" VerticalAlignment="Bottom" Width="335" Height="38"/>
    </Grid>
</Window>
