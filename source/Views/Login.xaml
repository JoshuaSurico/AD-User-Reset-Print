<Window x:Class="AD_User_Reset_Print.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AD_User_Reset_Print.Views"
        mc:Ignorable="d"
        Title="Login" Height="370" Width="360">
    <Grid>
        <Label Content="Domaine*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="txtbDomain" HorizontalAlignment="Left" Margin="167,14,0,0" TextWrapping="Wrap" Text="example.test.ch" VerticalAlignment="Top" Width="178" AutomationProperties.IsRequiredForForm="True"/>
        <Label Content="Identifiant*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,41,0,0" />
        <TextBox x:Name="txtbUsername" HorizontalAlignment="Left" Margin="167,45,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="178" AutomationProperties.IsRequiredForForm="True"/>
        <Label Content="Mot de passe*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,72,0,0"/>
        <PasswordBox x:Name="pswbPassword" HorizontalAlignment="Left" Margin="167,76,0,0" VerticalAlignment="Top" Width="178" AutomationProperties.IsRequiredForForm="True"/>
        <Label Content="Groupe où se trouve les utilisateurs" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,103,0,0" />
        <Button Content="Ajouter" VerticalAlignment="Top" Margin="216,132,84,0" Width="60"/>
        <Button Content="Enlever" VerticalAlignment="Top" Margin="283,132,15,0" Width="62"/>
        <TextBox x:Name="txtbGroup" HorizontalAlignment="Left" Margin="10,134,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="201" AutomationProperties.IsRequiredForForm="True"/>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,157,0,0" Width="335" Height="118"/>
        <Button x:Name="BtnTestConnection" Content="Test Connection" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,53" Height="20" Width="165" Click="BtnTestConnection_Click"/>
        <Button Content="Connecter" VerticalAlignment="Bottom" Margin="180,0,15,53" Height="20"/>
        <TextBox x:Name="txtOutput" HorizontalAlignment="Left" Margin="10,306,0,0" TextWrapping="Wrap" Text="txtOutput" VerticalAlignment="Top" Width="335" Height="38"/>
    </Grid>
</Window>
